<body>

    <header class="absolute inset-x-0 top-0 z-50">
        <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
            <div class="flex lg:flex-1">
                <a href="/how-it-works" class="-m-1.5 p-1.5">
                    <span class="sr-only">Your Company</span>
                    <img class="h-20 w-auto" src="/images/plane-logo.jpeg" alt="">
                </a>
            </div>
            <div class="flex lg:hidden">
                <button type="button"
                    class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
                    <span class="sr-only">Open main menu</span>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                        aria-hidden="true" data-slot="icon">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                </button>
            </div>
            <div class="hidden lg:flex lg:gap-x-12">
                <a href="/get-flights" class="text-lg font-semibold leading-6 text-gray-900">Get Flights</a>
                <a href="/how-it-works" class="text-lg font-semibold leading-6 text-gray-900">How it works?</a>
                <a href="/airlines" class="text-lg font-semibold leading-6 text-gray-900">Airlines</a>
                <a href="/faqs" class="text-lg font-semibold leading-6 text-gray-900">FAQs</a>
            </div>
            <div class="hidden lg:flex lg:flex-1 lg:justify-end gap-2">
                <a href="/dashboard"
                    class="text-lg font-semibold bg-blue-500 leading-5 px-3 py-2 border border-white hover:bg-blue-600 rounded-md text-white">
                    <%= userPassingData.username %>
                        <span aria-hidden="true">&rarr;</span>
                </a>
                <form action="/logout" method="post">
                    <button type="submit"
                        class="text-lg font-semibold bg-black leading-5 px-3 py-2 border border-white hover:bg-gray-800 rounded-md text-white">Logout</button>
                </form>
            </div>
        </nav>
        <!-- Mobile menu, show/hide based on menu open state. -->
        <div class="lg:hidden hidden" role="dialog" aria-modal="true">
            <!-- Background backdrop, show/hide based on slide-over state. -->
            <div class="fixed inset-0 z-50"></div>
            <div
                class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-72 sm:ring-1 sm:ring-gray-900/10">
                <div class="flex items-center justify-between">
                    <a href="#" class="-m-1.5 p-1.5">
                        <span class="sr-only">Your Company</span>
                        <img class="h-20 w-auto" src="/images/plane-logo.jpeg" alt="">
                    </a>
                    <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
                        <span class="sr-only">Close menu</span>
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                            aria-hidden="true" data-slot="icon">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
                <div class="mt-6 flow-root">
                    <div class="-my-6 divide-y divide-gray-500/10">
                        <div class="space-y-2 py-6">
                            <a href="/get-flights"
                                class="block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Get
                                Flights</a>
                            <a href="/how-it-works"
                                class="block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">How
                                it works?</a>
                            <a href="/airlines"
                                class="block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Airlines</a>
                            <a href="/faqs"
                                class="block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">FAQs</a>
                        </div>
                        <div class="py-6 flex flex-col space-y-4">
                            <form action="/dashboard" method="get">
                                <button type="submit"
                                    class="text-lg font-semibold bg-blue-500 px-3 py-2 rounded-md text-white hover:bg-blue-600">
                                    <%= userPassingData.username %> <span aria-hidden="true">&rarr;</span>
                                </button>
                            </form>
                            <form action="/logout" method="post">
                                <button type="submit"
                                    class="text-lg font-semibold bg-black px-3 py-2 rounded-md text-white hover:bg-gray-800">
                                    Logout
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="relative isolate px-6 pt-14 lg:px-8">
